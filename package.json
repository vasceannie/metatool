{
  "name": "metamcp-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:next\" \"pnpm run dev:remote-hosting\" --kill-others --names \"App,Remote Hosting\" --prefix-colors \"blue,green\"",
    "dev:next": "next dev --turbopack --port=12005",
    "dev:remote-hosting": "cd remote-hosting && pnpm run dev",
    "build:next": "next build",
    "build:remote-hosting": "cd remote-hosting && pnpm run build",
    "build:all": "concurrently \"pnpm run build:next\" \"pnpm run build:remote-hosting\" --names \"App,Remote Hosting\" --prefix-colors \"blue,green\"",
    "start:next": "next start",
    "start:remote-hosting": "cd remote-hosting && pnpm run start",
    "start:all": "concurrently \"pnpm run start:next\" \"pnpm run start:remote-hosting\" --kill-others --names \"App,Remote Hosting\" --prefix-colors \"blue,green\"",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -e .env.local -- drizzle-kit migrate"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.2.4",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@tanstack/react-table": "^8.20.6",
    "@types/lodash": "^4.17.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.469.0",
    "nanoid": "^5.0.9",
    "next": "15.2.4",
    "pg": "^8.13.1",
    "pkce-challenge": "^5.0.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "swr": "^2.3.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.17.0",
    "@next/eslint-plugin-next": "^15.1.2",
    "@types/node": "^20",
    "@types/pg": "^8.11.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9",
    "eslint-config-next": "15.1.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
